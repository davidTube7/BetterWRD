{
    "name":"BetterWRD",
    "description":"Adds tons of new features to WRD and fixes bugs. Made by davidTube.",
    "author": "davidTube",
    "version":"1.5",
    "manifest_version":2,
    "web_accessible_resources": ["features*", "fixes*", "settings*", "etc*"],
    "content_scripts":[
        {
            "js": [
                "index.js",
                
                "features/setbgImg.js",
                "features/nightthemepinIcon.js",
                "features/darkthemeRules.js",

                "fixes/pagenotFound.js",
                "fixes/v3rmLink.js",

                "etc/etc.js",
                "etc/firstusePopup.js"
            ],
            "matches":["https://wearedevs.net/*"],
            "exclude_matches":["*://*/*login*", "*://*/*register*", "*://*/*recovery*"]
        }
    ],
	"icons":{"48":"etc/bwrdlogo.png"},
    "options_ui":{"page":"settings/index.html", "open_in_tab":true},
    "permissions":["storage"],
    "browser_action":{"default_popup":"settings/openSettings.html"}
}